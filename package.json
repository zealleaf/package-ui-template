{
  "name": "package-ui-template",
  "version": "0.0.0",
  "description": "package-ui-template",
  "author": "zealleaf",
  "license": "MIT",
  "main": "lib/index.umd.js",
  "module": "lib/index.es.js",
  "types": "types/index.d.ts",
  "exports": {
    ".": {
      "require": "./lib/index.umd.js",
      "import": "./lib/index.es.js",
      "types": "./types/index.d.ts"
    }
  },
  "files": [
    "lib",
    "types"
  ],
  "keywords": [
    "ui",
    "react",
    "component"
  ],
  "bugs": {
    "url": "https://github.com/zealleaf/package-ui-template/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zealleaf/package-ui-template.git"
  },
  "homepage": "https://github.com/zealleaf/package-ui-template#readme",
  "scripts": {
    "build:dev": "tsc && vite build  --mode development",
    "build:prod": "tsc && vite build --mode production",
    "prep": "pnpm run build:prod",
    "lint": "eslint --fix --ext .js,.jsx,.ts,.tsx --quiet ./",
    "push": "esno scripts/push-to-github.ts"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false",
    "commit-msg": "pnpm exec esno scripts/commit-msg.ts $1"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "**/**.{js,jsx,ts,tsx,json}": [
      "pnpm run lint"
    ]
  },
  "peerDependencies": {
    "@emotion/react": "^10|^11",
    "react": "^17|^18",
    "react-dom": "^17|^18"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@emotion/babel-plugin": "^11.9.2",
    "@emotion/react": "^11.9.0",
    "@types/node": "^17.0.40",
    "@types/react": "^18.0.11",
    "@types/react-dom": "^18.0.5",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "@vitejs/plugin-react": "^1.3.2",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-define-config": "^1.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "esno": "^0.16.3",
    "happy-dom": "^5.0.0",
    "lint-staged": "^13.0.0",
    "picocolors": "^1.0.0",
    "prettier": "^2.6.2",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "rollup-plugin-visualizer": "^5.7.1",
    "shelljs": "^0.8.5",
    "simple-git-hooks": "^2.8.0",
    "typescript": "^4.7.2",
    "vite": "^2.9.9",
    "vite-plugin-dts": "^1.2.0",
    "vitest": "^0.13.1"
  }
}
